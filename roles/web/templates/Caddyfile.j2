{{ instance_name }} {
	import common_config

	import main_headers

    @protected_paths {
        path /authorities* /oauth2* /repos* /whats_that* /ping /ready /metrics
    }

    handle @protected_paths {
        reverse_proxy localhost:8080
    }

	handle {
		import serve_files
	}

    import serve_errors
}

