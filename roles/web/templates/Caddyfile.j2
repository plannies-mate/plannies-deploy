http://{{ instance_name }} {
	import common_config

	import main_headers

    @protected_paths {
        path /authorities* /whats_that* /repos*
    }

    @cloudflare_ips remote_ip {{ cf_ipv4.content.split('\n') | join(' ') }} {{ cf_ipv6.content.split('\n') | join(' ') }}

	#handle @protected_paths {
	#	handle @cloudflare_ips {
	#		import serve_files
	#	}
	#	error 403
	#}

	handle {
		import serve_files
	}

    import serve_errors
}

http://{{ assets_name }} {
	import common_config

    import asset_headers

